<div class="doc-content">
  {{#paper-content class="md-whiteframe-z1"}}
    {{#paper-list}}
      {{#paper-subheader class="md-no-sticky"}}Take inventory of your ingredients{{/paper-subheader}}
      {{#each ingredient in model}}
      {{paper-divider}}
      {{#paper-item}}
        <p>{{ingredient.name}}</p>
        {{#paper-button class="md-secondary" icon-button=true action="updateInventory"}}
          {{paper-icon icon="delete"}}
        {{/paper-button}}
      {{/paper-item}}
      {{else}}
        {{#paper-item}}
          <p>Somethings not right here......</p>
        {{/paper-item}}
      {{/each}}
    {{/paper-list}}
  {{/paper-content}}
</div>
